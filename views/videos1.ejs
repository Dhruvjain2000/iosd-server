<% for( let i = 0  ; i < playlists.length ; i++) {
        let playlist  = playlists[i]
%>
<div class="container p-t-md">
    <div class="title"><h2> <%= playlist.title %></h2></div>

    <div class="container">

        <!-- THE YOUTUBE PLAYER -->
        <div class="vid-container">
            <iframe id="vid_frame" src="<%= playlist.videos[0].link  %>" frameborder="0"
                    width="560" height="315"></iframe>
        </div>

        <!-- THE PLAYLIST -->
        <div class="vid-list-container">
            <div class="vid-list">
                <% for( let j = 0  ; j < playlist.videos.length ; j++) {
                        let video = playlist.videos[j] ;
                %>

                <div class="vid-item" onClick="document.getElementById('vid_frame').src='<%= video.link %>'">
                    <div class="thumb"><img src="<%= video.image %>"></div>
                    <div class="desc"><%= video.title %></div>
                </div>

                <% } %>

            </div>
        </div>

        <!-- LEFT AND RIGHT ARROWS -->
        <div class="arrows">
            <div class="arrow-left"><i class="fa fa-chevron-left fa-lg"></i></div>
            <div class="arrow-right"><i class="fa fa-chevron-right fa-lg"></i></div>
        </div>

    </div>

</div>
<% } %>



<!-- JS FOR SCROLLING THE ROW OF THUMBNAILS -->

<script src="js/jquery.min.js"></script>
<script src="js/chart.js"></script>
